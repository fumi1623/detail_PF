.main-container {
  background-image: url("<%= asset_path('top_background.jpg') %>");
  height: 800px;
  background-position: center;
  background-size:cover;
}

.top-logo-img {
  display: block;
  margin: 0 auto;
  padding-top: 80px;
}

.top-text {
  font-size: 1.5em;
  margin-top: 30px;
}

.top-text--title {
  font-family: 'Dancing Script', cursive;
  font-size: 1.65em;
}

.top-form {
  font-size: 1.65em;
}

.top-form--text {
  color: #1f1f1f;
}

.top-form--box:first-child {
  margin-right: 30px;
}