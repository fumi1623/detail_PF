.main-container {
  background-image: image-url("<%= asset_path('top_background.jpg') %>");
  background-position: center;
  background-size:cover;
  height: calc(100vh - 70px);
}

.top-logo-img {
  display: block;
  margin: 0 auto;
  padding-top: 80px;
}

.top-text {
  font-size: 1.5em;
  margin-top: 30px;
}

.top-text--title {
  font-family: 'Dancing Script', cursive;
  font-size: 1.65em;
}

.top-form {
  font-size: 1.65em;
}

.top-form--text {
  color: #1f1f1f;
}

.top-form--box:first-child {
  margin-right: 30px;
}

.about-text {
  margin-top: 100px;
}

.about-box-text {
  display: block;
}

.about-box1 {
  margin-top: 70px;
}

.about-box2 {
  margin-bottom: 50px;
}

@media screen and (max-width: 992px) {
  .about-box2 {
    display: flex;
    margin-top: 50px;
  }

  .about-img-2 {
    order: 1;
  }
}