<div class="row">
  <div class="col-2"></div>
  <div class="col">
    <h4 class="group-edit--title"><%= @group.name %></h4>
  </div>
</div>
<div class="row group-edit--row">
  <div class="col-2"></div>
  <div class="col">
    <%= form_with(model: @group, local: true) do |f| %>
      <div>
        <%= f.label :"グループ名", class:"group-edit--name_form" %>
        <%= f.text_field :name, :size => "40*20", class:"group-edit--name_form" %>
        <%= f.submit "グループ名変更" %>
      </div>
    <% end %>
    <%= render "layouts/error_messages", model: @group, attribute: :name %>
  </div>
</div>
<div class="row group-edit--row">
  <div class="col-2"></div>
  <div class="col-8 table-responsive-md">
    <table class="table">
      <thead class="thead-light">
        <tr scope="row">
          <th>グループメンバー</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @group.users.each do |user| %>
          <tr scope="row">
            <td class="text-nowrap">ユーザー名：<%= user.name %></td>
            <td class="text-nowrap">ユーザーID：<%= user.id %></td>
            <td class="text-nowrap">
              <%= link_to 'メンバーから外す', group_user_path(user.id), method: :delete, class: "btn btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
          <tr scope="row">
            <td  class="text-nowrap" colspan="3">

              <%= form_with(model: [@group, @new_group_user], url: group_users_path, local: true) do |form| %>
                <%= form.label :"ユーザーID", class:"group-edit--invitation_form" %>
                <%= form.text_field :user_id, class:"group-edit--invitation_form" %>
                <%= form.hidden_field :group_id, value: @group.id %>
                <%= form.submit "招待を送る" %>
              <% end %>
              <p class="group-edit--flash"><%= flash[:member] %></p>
            </td>
          </tr>
      </tbody>
    </table>
  </div>
  <div class="col-2"></div>
</div>
