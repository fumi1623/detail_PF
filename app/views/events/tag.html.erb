<div class="row event-tag_main">
  <div class="col-2"></div>
  <div class="col-8">
    <%= month_calendar events: @events do |date, events| %>
      <%= date.day %>

      <% events.first(3).each do |event| %>
        <div class="event-index--event_name_box">
          <%= link_to event_path(event), class: "" do %>
            <p class="event-index--event_name"><%= event.name %></p>
          <% end %>
        </div>
      <% end %>

      <% if events.count >= 4 %>
        <div class="text-left event-index--day_dot">
          <i class="fas fa-ellipsis-v fa-xs"></i>
        </div>
      <% end %>

      <% if events.present? %>
        <div class="event-index--day_count">
          <%= link_to event_day_path(day: date) do %>
            予定：<%= events.count %>件
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-2"></div>
</div>