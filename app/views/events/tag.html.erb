<div class="row event-tag--main">
  <div class="col-lg-2"></div>
  <div class="col-lg-8 col-md-11 event-tag--calendar">
    <h4 class="text-left"><i class="fas fa-tag"></i>  <%= @tag.name %></h4>
    <div class="event-tag--calendar__inside">
      <%= month_calendar events: @events do |date, events| %>
        <%= date.day %>
        <!--日付の中に表示する予定-->
        <% events.first(3).each do |event| %>
          <div class="event-tag--calendar__inside__name-box">
            <%= link_to event_path(event), class: "event-tag--calendar__inside__name-box__link" do %>
              <p class="event-tag--calendar__inside__name-box__name"><%= event.name %></p>
            <% end %>
          </div>
        <% end %>
        <!--４つ以上なら3点で省略-->
        <% if events.count >= 4 %>
          <div class="text-left event-tag--day_dot">
            <i class="fas fa-ellipsis-v fa-xs"></i>
          </div>
        <% end %>
        <!--その日の予定数-->
        <% if events.present? %>
          <div class="event-tag--calendar__inside__day-count">
            <%= link_to event_day_path(day: date), class: "event-tag--calendar__inside__day-count__link" do %>
              予定：<%= events.count %>件
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
