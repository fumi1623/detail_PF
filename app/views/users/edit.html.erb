<h1>Users#edit</h1>


<%= form_with model:@user, local:true do |f| %>

  <div class="form-group">
    <label for="user_name">ユーザーネーム</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name" %>
  </div>

  <div class="form-group">
    <label for="user_image">プロフィール画像</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "" %>
  </div>

  <div class="form-group">
    <label for="user_introduction">メールアドレス</label>
    <%= f.text_field :email, autofocus: true, id:"inputName", class: "form-control introduction" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update User", class: "btn btn-success" %>
  </div>

<% end %>
<p><%= link_to "退会する", quit_users_path, class: "btn btn-outline-danger quit-link" %></p>