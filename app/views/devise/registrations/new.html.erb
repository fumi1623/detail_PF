<h3 class="text-center user-new--title">新規会員登録フォーム</h3>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<div class="d-flex justify-content-center">
  <div class="col-11 user-new--form table-responsive-md">
    <table class="table table-bordered">
      <tbody>
        <tr scope="row">
          <th class="text-nowrap"><%= f.label :ユーザーネーム %></th>
          <td>
            <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名", :size => "60*30" %><br>
            <%= render "devise/shared/error_messages", model: @user, attribute: :name %>
          </td>
        </tr>
        <tr scope="row">
          <th class="text-nowrap"><%= f.label :"eメールアドレス" %></th>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxx@yyy.com", :size => "60*30" %><br>
            <%= render "devise/shared/error_messages", model: @user, attribute: :email %>
          </td>
        </tr>
        <tr scope="row">
          <th><%= f.label :"パスワード(6文字以上に設定してください)" %></th>
          <td>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力してください", :size => "60*30" %><br>
            <%= render "devise/shared/error_messages", model: @user, attribute: :password %>
          </td>
        </tr>
        <tr scope="row">
          <th class="text-nowrap"><%= f.label :"パスワード(確認用)" %></th>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度ご入力ください", :size => "60*30" %><br>
            <%= render "devise/shared/error_messages", model: @user, attribute: :password_confirmation %>
          </td>
        </tr>
        <tr scope="row">
          <th></th>
          <td><%= f.submit "会員登録", :class=>"user-new--form__btn" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
<div class="d-flex justify-content-center">
  <p class="user-new--login_text">
    すでに会員の方は<span><%= render "devise/shared/links" %></span>からログインしてください。
  </p>
</div>
